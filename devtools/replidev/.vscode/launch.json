  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'replidev'",
      "cargo": {
        "args": [
          "build",
          "--bin=replidev",
          "--package=replidev"
        ],
        "filter": {
          "name": "replidev",
          "kind": "bin"
        }
      },
      "args": [
        "play",
        "node-list",
      ],
      "cwd": "${workspaceFolder}/../../../playgrounds/"
    }
  ]
}